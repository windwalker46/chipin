NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_publishable_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Use Supabase transaction pooler for serverless deployments.
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-your-region.pooler.supabase.com:6543/postgres?sslmode=require

# Optional in production (falls back to VERCEL_URL). Required locally for share links.
APP_URL=http://localhost:3000
CRON_SHARED_SECRET=replace_with_long_random_secret
ADMIN_EMAILS=you@example.com
